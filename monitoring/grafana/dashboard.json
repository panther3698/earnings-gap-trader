{
  "dashboard": {
    "id": null,
    "title": "Earnings Gap Trading System - Main Dashboard",
    "tags": ["trading", "monitoring", "production"],
    "style": "dark",
    "timezone": "Asia/Kolkata",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up{job=\"earnings-gap-trader\"}",
            "legendFormat": "System Status",
            "refId": "A"
          },
          {
            "expr": "trading_active",
            "legendFormat": "Trading Active",
            "refId": "B"
          },
          {
            "expr": "active_positions_count",
            "legendFormat": "Active Positions",
            "refId": "C"
          },
          {
            "expr": "daily_pnl",
            "legendFormat": "Daily P&L",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Trading Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "cumulative_pnl",
            "legendFormat": "Cumulative P&L",
            "refId": "A"
          },
          {
            "expr": "daily_pnl",
            "legendFormat": "Daily P&L",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Amount (â‚¹)",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Active Positions",
        "type": "table",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "position_unrealized_pnl",
            "legendFormat": "{{symbol}}",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "symbol": "Symbol",
                "quantity": "Quantity",
                "entry_price": "Entry Price",
                "current_price": "Current Price",
                "Value": "Unrealized P&L"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Gap Detection Activity",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "rate(gaps_detected_total[5m]) * 60",
            "legendFormat": "Gaps Detected/min",
            "refId": "A"
          },
          {
            "expr": "rate(signals_generated_total[5m]) * 60",
            "legendFormat": "Signals Generated/min",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Count per minute",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2,
              "pointSize": 5,
              "showPoints": "never"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Order Execution Metrics",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 12
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(order_execution_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Duration (seconds)",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Risk Metrics",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 12
        },
        "targets": [
          {
            "expr": "portfolio_value",
            "legendFormat": "Portfolio Value",
            "refId": "A"
          },
          {
            "expr": "max_position_concentration * 100",
            "legendFormat": "Max Concentration %",
            "refId": "B"
          },
          {
            "expr": "current_drawdown * 100",
            "legendFormat": "Current Drawdown %",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 20
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "System Resource Usage",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 0,
          "y": 18
        },
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Percentage",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            },
            "max": 100,
            "min": 0
          }
        }
      },
      {
        "id": 8,
        "title": "API Response Times",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 12,
          "x": 12,
          "y": 18
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"earnings-gap-trader\"}[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"earnings-gap-trader\"}[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"earnings-gap-trader\"}[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Duration (seconds)",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Database Performance",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 0,
          "y": 24
        },
        "targets": [
          {
            "expr": "pg_stat_activity_count",
            "legendFormat": "Active Connections",
            "refId": "A"
          },
          {
            "expr": "rate(pg_stat_database_tup_inserted[5m])",
            "legendFormat": "Inserts/sec",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_tup_updated[5m])",
            "legendFormat": "Updates/sec",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Count",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Error Rates",
        "type": "timeseries",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 8,
          "y": 24
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors/sec",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors/sec",
            "refId": "B"
          },
          {
            "expr": "rate(order_execution_failures_total[5m])",
            "legendFormat": "Order Failures/sec",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Errors per second",
              "axisPlacement": "auto",
              "drawStyle": "line",
              "fillOpacity": 10,
              "lineWidth": 2
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Market Data Status",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 8,
          "x": 16,
          "y": 24
        },
        "targets": [
          {
            "expr": "zerodha_api_health_check",
            "legendFormat": "Zerodha API",
            "refId": "A"
          },
          {
            "expr": "market_data_latency_seconds",
            "legendFormat": "Data Latency (s)",
            "refId": "B"
          },
          {
            "expr": "time() - last_market_data_update",
            "legendFormat": "Data Age (s)",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN",
                    "color": "red"
                  },
                  "1": {
                    "text": "UP",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "green",
                  "value": 60
                }
              ]
            }
          }
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"earnings-gap-trader\"}, instance)",
          "refresh": 1,
          "includeAll": true,
          "allValue": ".*"
        },
        {
          "name": "timeframe",
          "type": "interval",
          "query": "5m,15m,30m,1h,6h,12h,1d",
          "current": {
            "text": "5m",
            "value": "5m"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Trading Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*Trading.*\"}",
          "iconColor": "rgba(0, 211, 255, 1)",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{annotations.summary}}"
        },
        {
          "name": "System Events",
          "datasource": "Prometheus",
          "enable": true,
          "expr": "ALERTS{alertname=~\".*System.*\"}",
          "iconColor": "rgba(255, 96, 96, 1)",
          "titleFormat": "{{alertname}}",
          "textFormat": "{{annotations.summary}}"
        }
      ]
    }
  },
  "overwrite": true
}